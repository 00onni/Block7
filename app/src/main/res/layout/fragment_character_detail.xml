<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_character_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ratio_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/mail_page_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/main_page_background"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:alpha="0.7"
            app:srcCompat="@drawable/character_info_background"
            android:elevation="-2dp"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            >

            <FrameLayout
                android:id="@+id/filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.4"
                />

            <FrameLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/black"
                android:alpha="0.6"
                />

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.08"
                app:layout_constraintWidth_percent="0.04"
                app:layout_constraintTop_toTopOf="@id/top_bar"
                app:layout_constraintBottom_toBottomOf="@id/top_bar"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/close_button_white"
                android:scaleType="fitXY"
                android:background="@null"
                />




            <ImageView
                android:id="@+id/character_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/character_image"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Character Name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/nanum4"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="type"
                    android:fontFamily="@font/nanum3"
                    app:layout_constraintTop_toBottomOf="@id/character_name"
                    app:layout_constraintStart_toStartOf="@id/character_name"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/type"
                    app:layout_constraintStart_toStartOf="@id/character_name"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/HP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/level"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/attackpower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공격력"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/HP"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방어력"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/attackpower"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="속도"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/defense"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/critical_chance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치명타 확률"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/speed"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/critical_damage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치명타 피해"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/critical_chance"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />


                <TextView
                    android:id="@+id/hp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/HP"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/attackpower_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/attackpower"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />


                <TextView
                    android:id="@+id/defense_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/defense"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/speed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/speed"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/critical_chance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/critical_chance"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/critical_damage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/critical_damage"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />


                <TextView
                    android:id="@+id/breakthrough"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="돌파"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/critical_damage"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/breakthrough_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/breakthrough"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/breakthrough_stone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="돌파석"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/breakthrough"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:id="@+id/breakthrough_stone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:fontFamily="@font/nanum3"
                    android:textSize="15dp"
                    app:layout_constraintTop_toTopOf="@id/breakthrough_stone"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
